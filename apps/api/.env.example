# Application
APP_NAME=EventMaster API
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql://eventmaster:password@localhost:5432/eventmaster_db
# For SQLite (development): sqlite:///./eventmaster.db

# JWT Authentication
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
# Comma-separated list of allowed origins
# For local development: http://localhost:5173,http://localhost:3000
# For production: Add your Cloudflare Pages URL and any custom domains
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Cloudflare Pages Project Name (enables wildcard CORS for *.PROJECT.pages.dev)
# Example: If your Pages URL is https://eventmaster-web.pages.dev, set this to "eventmaster-web"
# This allows preview deployments (e.g., https://abc123.eventmaster-web.pages.dev)
CLOUDFLARE_PAGES_PROJECT=

# Logging
LOG_LEVEL=INFO
